{
  "name": "@flixpress/angular-decorators",
  "version": "1.0.0",
  "description": "Some helpful decorators for Angular",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "tslint -p .",
    "posttest": "npm run lint",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "start": "npm run test",
    "test": "jest --watch",
    "pubtest": "jest",
    "build": "tsc",
    "prepublishOnly": "npm run pubtest && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flixpressllc/useful-angular-components.git"
  },
  "author": "@happycollision",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flixpressllc/useful-angular-components/issues"
  },
  "homepage": "https://github.com/flixpressllc/useful-angular-components#readme",
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.4",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.1"
  }
}
